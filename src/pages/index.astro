---
import { getEntry } from 'astro:content';

const partyInfo = await getEntry('party', 'info');
const { Content } = await partyInfo.render();
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{partyInfo.data.title}</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap');

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    :root {
      --ink: #1f2937;
      --ink-soft: #4b5563;
      --accent: #5b6cff;
      --accent-deep: #6a3fbf;
      --card: #ffffff;
    }

    body {
      font-family: 'Outfit', 'Trebuchet MS', 'Segoe UI', sans-serif;
      line-height: 1.6;
      color: var(--ink);
      background: radial-gradient(1200px 700px at 10% -10%, #e7e9ff 0%, transparent 60%),
        radial-gradient(900px 600px at 110% 0%, #efe4ff 0%, transparent 55%),
        linear-gradient(135deg, #6f7bff 0%, #8a5bd6 100%);
      min-height: 100vh;
      padding: 2rem 1rem;
    }

    .container {
      max-width: min(900px, 100%);
      margin: 0 auto;
      background: var(--card);
      padding: 3rem;
      border-radius: 18px;
      box-shadow: 0 18px 50px rgba(16, 24, 40, 0.25);
    }

    h1 {
      color: var(--accent);
      font-size: 2.5rem;
      margin-bottom: 1rem;
      text-align: center;
      padding-bottom: 1rem;
      border-bottom: 3px solid var(--accent);
    }

    h2 {
      color: var(--accent-deep);
      font-size: 1.8rem;
      margin-top: 2.5rem;
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid #e0e0e0;
    }

    h3 {
      color: var(--accent);
      font-size: 1.3rem;
      margin-top: 1.5rem;
      margin-bottom: 0.5rem;
    }

    p {
      margin-bottom: 1rem;
      color: var(--ink-soft);
    }

    strong {
      color: #333;
    }

    a {
      color: var(--accent);
      text-decoration: none;
      transition: color 0.3s ease;
      overflow-wrap: anywhere;
      word-break: break-word;
    }

    a:hover {
      color: var(--accent-deep);
      text-decoration: underline;
    }

    ul {
      margin-left: 2rem;
      margin-bottom: 1rem;
      padding-right: 0.25rem;
    }

    li {
      margin-bottom: 0.5rem;
      color: var(--ink-soft);
      overflow-wrap: anywhere;
      word-break: break-word;
    }

    p,
    li,
    strong {
      overflow-wrap: anywhere;
      word-break: break-word;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      body {
        padding: 1rem 0.5rem;
      }

      .container {
        padding: 2rem 1.25rem;
        border-radius: 14px;
      }

      h1 {
        font-size: 2rem;
      }

      h2 {
        font-size: 1.5rem;
      }

      h3 {
        font-size: 1.2rem;
      }
    }

    @media (max-width: 480px) {
      .container {
        padding: 1.5rem 1rem;
      }

      ul {
        margin-left: 1.25rem;
      }

      h1 {
        font-size: 1.75rem;
      }

      h2 {
        font-size: 1.3rem;
      }

      h3 {
        font-size: 1.1rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <Content />
  </div>
</body>
</html>
